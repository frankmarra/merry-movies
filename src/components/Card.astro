---
import { Image } from 'astro:assets'
const { slug, title, poster, rated, year, plot, index, date } = Astro.props
const show = index <= date - 1 ? null : 'opaque'
---

<li class="striped-box" transition:name={`striped-box-${slug}`}>
  <div class="link-card">
    <a href={!show ? `/${slug}` : '#'}>
      <!-- <img
        src={poster}
        alt={title}
        class={show}
        transition:name={`img-${slug}`}
      /> -->
      <img
        src={poster}
        alt={title}
        transition:name={`img-${slug}`}
        class="opaque"
      />
      <!-- <p class={show == null ? 'opaque' : null}>{index + 1}</p> -->
      <p class="">{index + 1}</p>
    </a>
  </div>
</li>

