---
import { Image } from 'astro:assets'
const { href, title, poster, rated, year, plot } = Astro.props
---

<li class="link-card">
  <div>
    <img src={poster} alt={title} />
    <section class="info">
      <h2>
        {title}
      </h2>
      <section class="plot">
        <p>
          {plot}
        </p>
        <p>{year}{' '} <span>{rated}</span></p>
      </section>
    </section>
  </div>
</li>
<style>
  img {
    width: 100%;
    object-fit: cover;
    aspect-ratio: 2/3;
  }
  .link-card {
    list-style: none;
    display: flex;
    color: #f2e8cf;
    background-color: #386641;
    background-image: none;
    background-size: 400%;
    border-radius: 7px;
    border: 10px solid #bc4749;
    width: 300px;
  }
  /* .link-card > a {
