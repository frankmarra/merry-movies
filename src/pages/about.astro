  z-index: 1;
  padding: 0 2px;
  background-color: rgb(244,81,50);
  left: 0;
  top: 0;
  transition: ease-out .7s;
}

.lid span{
  left: 172px;
}

.box-ribbon-horz, .box-ribbon-vert, .lid-ribbon {
  position: absolute;
  display: block;
  background: rgba(89,195,173,0.8);
  box-shadow: 1px 2px 3px rgba(0,0,0,0.1);
}

.box-ribbon-horz {
  width: 100%;
  height: 60px;
  top: 80px;
}

.box-ribbon-vert, .lid-ribbon {
  width: 60px;
  height: 100%;
  left: 170px;
}

.promo h2 {
  color: rgb(89,195,173);
  font-size: 40px;
  margin: 0;
  font-family: Georgia, 'Times New Roman', Times, serif; 
  text-align: center;
  position: relative;
  top: -50px;
  height: 0; 
  all ease-out .7s;
}

.promo img {
  width: 300px;
  height: auto;
  position: relative;
  top: 0;
  left: 55px;
  all ease-out .7s;
  transition: ease-out .7s;
}

.present:hover .lid {
  top: -150px;
  transform: rotatez(98deg);
  left: 210px;
}
.present:hover  {
  top: -80px;
}

.present:hover img {
  
  top: -180px;
}

  @media only screen and (max-width: 787px) {
    .page-grid {
      display: flex;
