---
import Layout from '../layouts/Layout.astro'
import Card from '../components/Card.astro'
import movies from '../content/movies/movies.json'

const today = new Date()
---

<Layout title="Welcome to Astro.">
  <main>
    <div class="calendar-border" transition:name="calendar-border-box">
      <ul role="list" class="link-card-grid">
        {
          movies.map((movie, index) => (
            <Card
              slug={movie.slug}
              title={movie.title}
              plot={movie.plot}
              poster={movie.poster}
              rated={movie.rated}
              year={movie.year}
              index={index}
              key={movie.title}
              date={today.getDate()}
            />
          ))
        }
      </ul>
    </div>
  </main>
</Layout>

<style>
  main {
    margin: auto;
    padding: 1rem;
    /* width: min(1400px, 100% - 2rem); */
    font-family: 'Melodrama';
    color: #156556;
    font-size: 20px;
    line-height: 1.6;
    /* overflow: auto; */
    /* overflow-y: scroll; */
  }

  .text-gradient {
    background-image: var(--accent-gradient);
    -webkit-background-clip: text;
    -webkit-text-fill-color: transparent;
    background-size: 400%;
    background-position: 0%;
  }
  .calendar-border {
    /* border: 10px dotted #ffab9a; */
    margin: 1rem;
    padding: 2rem;
    overflow: auto;
  }
  .link-card-grid {
    --min: 200px;
    --gap: 1rem;
    /* margin-top: 5rem; */
    display: grid;
    grid-gap: var(--gap);
    /* min() with 100% prevents overflow
  in extra narrow spaces */
    grid-template-columns: repeat(
      auto-fill,
      minmax(min(100%, var(--min)), 1fr)
    );

    /* display: grid;
    grid-template-columns: repeat(auto-fill, minmax(125px, 1fr));
    gap: 3rem; */
    padding-inline: 1rem;
    /* overflow: hidden; */
    /* overflow-y: scroll; */
  }

  @media only screen and (max-width: 787px) {
    h1 {
      font-size: 3rem;
    }
    /* .calendar-border {
      border: 10px dotted #f25434;
      margin: 0.1rem;
      padding: 2rem;
     
    } */
  }
</style>
